<div>
    <h2>Create User</h2>
    <form id='createUserForm' method='post'>
        Name: <input type='text' name='name' id='userName'>
        Email: <input type='email' name='email' id='userEmail'>
        Password: <input type='password' name='password' id='userPassword'>
        <input type='submit' value='Create'>
    </form>
</div>

<div>
    <h2>Update User</h2>
    <form id='updateUserForm' method='post'>
        Id: <input type='text' name='name' id='userIdUpdate'>
        Name: <input type='text' name='name' id='userNameUpdate'>
        Email: <input type='email' name='email' id='userEmailUpdate'>
        Password: <input type='password' name='password' id='userPasswordUpdate'>
        <input type='submit' value='Update'>
    </form>
</div>

<div>
    <h2>Delete User</h2>
    <form id='deleteUserForm'>
        Id: <input type='string' name='deletingUserId' id='deletingUserId'>
        <input type='submit' value='Delete'>
    </form>
</div>

<div>
    <h2>Users Available</h2>
    <table id='usersTable'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{_id}}</td>
                <td>{{name}}</td>
                <td>{{email}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script src='/socket.io/socket.io.js'></script>
<script src='/js/users.js'></script>