<div>
    <h2>Add Product</h2>
    <form id='addForm'>
        Title: <input type='text' name='productTitle' id='productTitle'>
        Description: <input type='text' name='productDescription' id='productDescription'>
        Code: <input type='text' name='productCode' id='productCode'>
        Price: <input type='number' name='productPrice' id='productPrice'>
        Status: <input type='text' name='productStatus' id='productStatus'>
        Stock: <input type='number' name='productStock' id='productStock'>
        Category: <input type='text' name='productCategory' id='productCategory'>
        <input type='submit' value='Create'>
    </form>
</div>

<div>
    <h2>Delete Product</h2>
    <form id='deleteForm'>
        Id: <input type='number' name='productId' id='productId'>
        <input type='submit' value='Delete'>
    </form>
</div>

<h2>Products Available</h2>
<table id='rtpTable'>
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Code</th>
            <th>Price</th>
            <th>Status</th>
            <th>Stock</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody id='rtpTableBody'>
        {{#each products}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{code}}</td>
            <td>{{price}}</td>
            <td>{{status}}</td>
            <td>{{stock}}</td>
            <td>{{category}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script src='/socket.io/socket.io.js'></script>
<script src='/js/index.js'></script>